@model List<BasicFilm>
<section class="movie-area movie-bg" data-background="img/bg/movie_bg.jpg">
    <div class="container">
        <div class="row align-items-end mb-60">
            <div class="col-lg-6">
                <div class="section-title text-center text-lg-left">
                    <h2 class="title">Сериалы</h2>
                </div>
            </div>
        </div>
        <div class="row tr-movie-active">
            @foreach (var series in Model.Where(s => !string.IsNullOrEmpty(s.PosterUrl)))
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one">
                    <div class="movie-item movie-item-three mb-50">
                        <div class="top">
                            <h5 style="max-width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><a>@series.PrimaryTitle</a></h5>
                            @if (series.Year.HasValue)
                            {
                                <span class="date">@series.Year</span>
                            }
                            else
                            {
                                <p class="card-text">Год: Неизвестно</p>
                            }
                            
                        </div>
                        <div class="movie-poster">
                            <img src="@series.PosterUrl" style="height: 400px; object-fit: cover;" class="card-img-top" alt="@series.PrimaryTitle">
                            <ul class="overlay-btn">
                                <li><a asp-controller="Serial" asp-action="Details" asp-route-kinopoiskId="@series.Id" class="btn">Смотреть</a></li>
                            </ul>
                        </div>
                        <div class="movie-content" >
                            <div class="bottom">
                                <ul>
                                    <li><span class="quality">hd</span></li>
                                    <li>
                                        @if (series.Rating.HasValue)
                                        {
                                            <span class="rating"><i class="fas fa-thumbs-up"></i>@series.Rating</span>
                                        }
                                        else
                                        {
                                            <span class="rating"><i class="fas fa-thumbs-up"></i>Неизвестно</span>
                                        }
                                        
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</section>