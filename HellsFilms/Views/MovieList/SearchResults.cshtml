@model List<KinopoiskParser.Film>


@if(Model != null)
{
    <section class="movie-area movie-bg" data-background="/img/bg/movie_bg.jpg">
        <div class="container">
            <div class="row align-items-end mb-60">
                <div class="col-lg-6">
                    <div class="section-title text-center text-lg-left">
                        <h2 class="title">Поиск</h2>
                    </div>
                </div>
            </div>
            <div class="row tr-movie-active">
                @foreach (var series in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one ">
                        <div class="movie-item movie-item-three mb-50">
                            <div class="top">
                                <h5 style="max-width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><a>@Html.Raw(series.Title)</a></h5>
                                @if (series.Year != null)
                                {
                                    <span class="date">@Html.Raw(System.Web.HttpUtility.HtmlDecode(series.Year))</span>
                                }
                                else
                                {
                                    <p class="card-text">Год: Неизвестно</p>
                                }

                            </div>
                            <div class="movie-poster">
                                <img src="@series.ImageUrl" style="height: 400px; object-fit: cover;" class="card-img-top" alt="@Html.Raw(series.Title)">
                                <ul class="overlay-btn">
                                    <li><a asp-controller="MovieList" asp-action="Details" asp-route-kinopoiskId="@series.Id" class="btn">Смотреть</a></li>
                                </ul>
                            </div>
                            <div class="movie-content">
                                <div class="bottom">
                                    <ul>
                                        <li><span class="quality">hd</span></li>
                                        <li>
                                            @if (series.Rating != null)
                                            {
                                                <span class="rating"><i class="fas fa-thumbs-up"></i>@Html.Raw(series.Rating)</span>
                                            }
                                            else
                                            {
                                                <span class="rating"><i class="fas fa-thumbs-up"></i>Неизвестно</span>
                                            }

                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </section>
}