<header class="header-style-two">
    <div id="sticky-header" class="menu-area">
        <div class="container custom-container">
            <div class="row">
                <div class="col-12">
                    <div class="mobile-nav-toggler"><i class="fas fa-bars"></i></div>
                    <div class="menu-wrap">
                        <nav class="menu-nav show">
                            <div class="logo">
                                <a asp-controller="Home" asp-action="Index">
                                    <img src="~/img/logo/logo.png" alt="Logo">
                                </a>
                            </div>
                            <div class="navbar-wrap main-menu d-none d-lg-flex">
                                <ul class="navigation">
                                    <li><a class="header-btn" asp-controller="MovieList" asp-action="Index">Фильмы</a></li>
                                    <li><a class="header-btn"  asp-controller="Serial" asp-action="Index">Сериалы</a></li>
                                    <li><a class="header-btn" asp-controller="Blog" asp-action="Index">Новости</a></li>
                                    @if (User.Identity?.IsAuthenticated ?? false)
                                    {
                                        <li class="header-btn"><a asp-controller="Account" asp-action="Logout">Выход</a></li>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                                        {
                                            <li class="header-btn"><a class="btn" asp-area="Admin" asp-controller="AdminMovie" asp-action="Index">Редактирование</a></li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="header-btn"><a asp-controller="Account" asp-action="Login">Вход</a></li>
                                        <li class="header-btn"><a asp-controller="Account" asp-action="Create">Регистрация</a></li>
                                    }
                                    <li class="navbar-wrap main-menu d-none d-lg-flex">
                                        <div class="footer-search" style="margin-top: 20px;">
                                            <form asp-controller="MovieList" asp-action="Search">
                                                <input type="text" name="query" placeholder="Введите наименование" />
                                                <button type="submit">Найти</button>
                                            </form>
                                        </div>
                                    </li>
                                    
                                    
                                </ul>
                            </div>
                               
                        </nav>
                    </div>

                    <!-- Mobile Menu  -->
                    <div class="mobile-menu">
                        <div class="close-btn"><i class="fas fa-times"></i></div>

                        <nav class="menu-box">
                            <div class="nav-logo">
                                <a asp-controller="Home" asp-action="Index"><img  src="~/img/logo/logo.png" alt="" title=""></a>
                            </div>
                            <div class="menu-outer">
                                <!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header-->
                            </div>
                        </nav>
                    </div>
                    <div class="menu-backdrop"></div>
                    <!-- End Mobile Menu -->

                </div>
            </div>
        </div>
    </div>
</header>
<!-- header-area-end -->
